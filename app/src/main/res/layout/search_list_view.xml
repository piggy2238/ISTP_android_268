<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/listImg"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/pokemon_ball"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:scaleX="1.4"
        android:scaleY="1.4"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="name"
        android:id="@+id/nameText"
        android:layout_alignTop="@+id/listImg"
        android:layout_toRightOf="@+id/listImg"
        android:layout_toEndOf="@+id/listImg"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Type1"
        android:id="@+id/type1Text"
        android:layout_alignBottom="@+id/listImg"
        android:layout_toRightOf="@+id/listImg"
        android:layout_toEndOf="@+id/listImg"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="hpVal"
        android:id="@+id/hpText"
        android:layout_alignTop="@+id/nameText"
        android:layout_toRightOf="@+id/type1Text"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Type2"
        android:id="@+id/type2Text"
        android:layout_alignTop="@+id/type1Text"
        android:layout_alignLeft="@+id/hpText"
        android:layout_alignStart="@+id/hpText" />

</RelativeLayout>